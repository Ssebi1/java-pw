        <header class="bg-white shadow">
            <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold tracking-tight text-gray-900">Cart</h1>
            </div>
        </header>

    <main>
        <div class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]"
            aria-hidden="true">
            <div class="relative left-1/2 -z-10 aspect-[1155/678] w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]"
                style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
            </div>
        </div>
        <ul role="list" class="divide-y divide-gray-100 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" style="margin: 0 auto;">
            <% cart.forEach(cartItem => { %>
                <li class="flex justify-between gap-x-6 py-5">
                <div class="flex min-w-0 gap-x-4">
                    <% if (cartItem.product.imageUrl) { %>
                        <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="<%=cartItem.product.imageUrl%>" alt="">
                    <% } else { %>
                        <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                    <% } %>
                    <div class="min-w-0 flex-auto">
                    <p class="text-sm font-semibold leading-6 text-gray-900 product"><%=cartItem.product.name%></p>
                    <% if (cartItem.product.salePrice) { %>
                        <span class="mt-1 font-medium text-red-900 line-through"><%=cartItem.product.price%> ron</span>
                        <span class="mt-1 text-lg font-medium text-gray-900 price"><%=cartItem.product.salePrice%> ron</span>
                    <% } else { %>
                        <span class="mt-1 text-lg font-medium text-gray-900 price"><%=cartItem.product.price%> ron</span>
                    <% } %>
                    </div>
                </div>
                <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
                    <p class="text-sm leading-6 text-gray-900 quantity">Quantity: <%=cartItem.quantity%></p>
                    <p class="mt-1 text-xs leading-5 text-red-500" style="cursor: pointer;" onclick="removeFromCart(<%=cartItem.product.id%>)">Remove</p>
                </div>
                </li>
            <% }) %>
          </ul>
        <div role="list" class="divide-y divide-gray-100 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" style="margin: 0 auto;">
            <div class="flex justify-between py-5">
                <div class="flex min-w-0 gap-x-4">
                    <div class="min-w-0 flex-auto">
                        <p class="text-sm font-semibold leading-6 text-gray-900">Total</p>
                        <span class="mt-1 text-lg font-medium text-gray-900 total">0 ron</span>
                    </div>
                </div>
                <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
                    <button type="button" onclick="sendOrder()"
                        class="relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        <span class="absolute -inset-1.5"></span>
                        <span class="sr-only">Send order</span>
                        Send order
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>




    <script>
        const calculateTotal = () => {
            const prices = document.querySelectorAll(".price");
            const quantities = document.querySelectorAll(".quantity");
            let total = 0;
            for (let i = 0; i < prices.length; i++) {
                total += parseInt(prices[i].innerHTML.replace(" ron", "")) * parseInt(quantities[i].innerHTML.replace("Quantity: ", ""));
            }
            document.querySelector(".total").innerHTML = total + " ron";
        }
        calculateTotal();
        // check if user is not logged in
        if (localStorage.getItem("user") == null) {
            window.location.href = "/login";
        }

        const user = JSON.parse(localStorage.getItem("user"));
        const user_id = user.id;
        document.getElementById("orders-link").href = "/orders/" + user_id;
        document.getElementById("messages-link").href = "/messages/" + user_id;

        const logout = () => {
            localStorage.removeItem("user");
            window.location.href = "/login";
        }
        const openUserProfile = () => {
            window.location.href = "/profile/" + user.id;
        }

        const removeFromCart = (product_id) => {
            fetch("/api/cart/" + user_id + "/" + product_id, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                },
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.status != 'BAD_REQUEST') {
                        window.location.reload();
                    } else {
                        Toastify({
                            text: data.message,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#ff4444",
                            stopOnFocus: true,
                        }).showToast();
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        }

        const getProductsString = () => {
            const products = document.querySelectorAll(".product");
            const quantities = document.querySelectorAll(".quantity");
            let productsString = "";
            for (let i = 0; i < products.length; i++) {
                productsString += quantities[i].innerHTML.replace("Quantity: ", "") + 'x ' + products[i].innerHTML + ", ";
            }
            productsString = productsString.slice(0, -2);
            return productsString;
        }

        const sendOrder = () => {
            fetch("/api/orders/" + user_id, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    price: parseInt(document.querySelector(".total").innerHTML.replace(" ron", "")),
                    products: getProductsString()
                }),
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.status != 'BAD_REQUEST') {
                        window.location.href = "/orders/" + user_id;
                    } else {
                        Toastify({
                            text: data.message,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#ff4444",
                            stopOnFocus: true,
                        }).showToast();
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        
        }
    </script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    </body>
    
